@model MilkyProject.WebUI.Dtos.ContactDtos.CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMilkyUI.cshtml";
}

<div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center py-5">
        <h1 class="display-3 text-white mb-4 animated slideInDown">Contact</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Pages</a></li>
                <li class="breadcrumb-item active" aria-current="page">Contact</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="section-title bg-white text-center text-primary px-3">Contact Us</p>
            <h1 class="mb-5">Lütfen bizimle iletişime geçiniz.</h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                <h3 class="mb-4">Bizimle İletişime Geç</h3>
                <p class="mb-4">Ürünler hakkında bilgi almak istiyorsanız veya öneriniz,şikayetleriniz var ise lütfen bizimle iletişime geçiniz.</a>.</p>
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" asp-for="NameSurname" id="name" placeholder="Adınız soyadınız">
                                <label for="name">Adınız Soyadınız</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Mail adresi">
                                <label for="email">Mail Adressi</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control"  asp-for="Subject" id="subject" placeholder="Konu">
                                <label for="subject">Konu</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" placeholder="Buraya Mesajınızı yazınız.." asp-for="Content" id="message" style="height: 250px"></textarea>
                                <label for="message">Message</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-secondary rounded-pill py-3 px-5" type="submit">Gönder</button>
                        </div>
                    </div>
                </form>
            </div> 
            @await Component.InvokeAsync("ContactAdressComponent")
            
        </div>
    </div>
</div>
