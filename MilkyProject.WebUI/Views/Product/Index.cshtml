@model List<MilkyProject.WebUI.Dtos.ResultProductDto>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<div class="container"> 
    <br /><br /> 
    <table class="table table-hover"> 
        <tr> 
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Eski Fiyatı</th>
            <th>Yeni Fiyatı</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr> 
        @foreach (var item in Model)
        {
            <tr> 
                <td>@item.productId</td>
                <td>@item.productName</td>
                <td>@item.oldPrice</td>
                <td>@item.newPrice</td>
                <td>@item.status</td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
                <td><a href="#" class="btn btn-danger">Sil</a></td>
            </tr>
        }
    </table>
</div>
