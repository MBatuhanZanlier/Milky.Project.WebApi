@model MilkyProject.WebUI.Dtos.ProductDtos.UpdateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<form method="post">
    <div class="container">
        <br />
        <label>Kategori Adı</label>
        <input type="text" asp-for="ProductId" readonly class="form-control" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Eski Fiyat</label>
        <input type="text" asp-for="OldPrice" class="form-control" />
        <br />
        <label>Yeni Fiyat</label>
        <input type="text" asp-for="NewPrice" class="form-control" />
        <br />
        <label>Görsel Yolu</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <br />
        <label>Durum</label>
        <input type="text" asp-for="Status" class="form-control" />
        <br />
        <button class="btn btn-primary">Kategori Ekle</button>
    </div>
</form>
