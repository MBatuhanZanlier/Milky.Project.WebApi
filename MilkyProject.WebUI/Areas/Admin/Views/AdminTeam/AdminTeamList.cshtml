@model List<MilkyProject.WebUI.Dtos.TeamDtos.ResultTeamDto>
@{
    ViewData["Title"] = "AdminTeamList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekibimiz</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th> 
                            <th>İsim Soyisim</th>
                            <th>Görev</th>
                            <th>Facebook Hesabı</th>
                            <th>instagram Hesabı</th>
                            <th>Twiter Hesabı</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TeamId</td>
                                <td> <img class="img-fluid" src="@item.ProfileImageUrl" alt=""></td>
                               <td>@item.NameSurname</td>
                                <td>@item.JobName</td>
                                <td><a class="btn btn-square btn-outline-secondary rounded-circle mx-1" href="@item.SocialMediaUrl1"><i class="mdi mdi-facebook"></i></a></td>
                                <td><a class="btn btn-square btn-outline-secondary rounded-circle mx-1" href="@item.SocialMediaUrl2"><i class="mdi mdi-instagram"></i></a></td>
                                <td><a class="btn btn-square btn-outline-secondary rounded-circle mx-1" href="@item.SocialMediaUrl3"><i class="mdi mdi-twitter"></i></a></td>
                                <td><a href="~/Admin/Team/AdminTeamUpdate/@item.TeamId" class="btn btn-info">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

