@model List<MilkyProject.WebUI.Dtos.AdressDtos.ResultAdressDto>
@{
    ViewData["Title"] = "AdminAdressList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekibimiz</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Caddesi İsmi</th>
                            <th>Telefon No</th>
                            <th>Mail </th>
                            <th>Hafta İçi Çalışma Saatleri</th>
                            <th>Hafta sonu Çalışma Saatleri</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AdressId</td>
                                <td>@item.Street</td>
                                <td>@item.Phone</td>
                                <td>@item.Mail</td>
                                <td>@item.BusinessHoursWeek</td>
                                <td>@item.BusinessHoursWeekend</td>
                                <td><a href="~/Admin/AdminAdress/UpdateAdress/@item.AdressId" class="btn btn-info">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <br />
            </div>
        </div>
    </div>
</div>

