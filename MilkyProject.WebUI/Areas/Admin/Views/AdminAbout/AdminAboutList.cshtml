@model List<MilkyProject.WebUI.Dtos.AboutDtos.ResultAboutDto>
@{
    ViewData["Title"] = "AdminAboutList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımızda</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Açıklama</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.aboutId</td>
                                <td>@item.title</td>
                                <td>@item.description.Substring(0,30)</td>
                                <td><a href="~/Admin/About/UpdateAbout/@item.aboutId" class="btn btn-info">Düzenle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
