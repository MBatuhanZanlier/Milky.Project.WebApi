@model List<MilkyProject.WebUI.Dtos.TestimonialDtos.ResultTestimonialDto>
@{
    ViewData["Title"] = "TestimonialList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ekibimiz</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Resim</th>
                            <th>İsim Soyisim</th>
                            <th>Görev</th>
                            <th>Yorum</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TestimonialId</td>
                                <td> <img class="img-fluid" src="@item.ImageUrl" alt=""></td>
                                <td>@item.NameSurname</td>
                                <td>@item.JobName</td>
                                <td>@item.Description.Substring(0, 30)...</td>
                                <td><a href="~/Admin/AdminTestimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info">Düzenle</a></td>
                                <td><a href="~/Admin/AdminTestimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-warning">Sil</a></td>
                            </tr>
                        }
                    </tbody>
                </table>  
                <br />
                <a href="~/Admin/AdminTestimonial/CreateProduct/" class="btn btn-outline-danger">Yeni Referans Ekle</a>
            <br />
            </div>
        </div>
    </div>
</div>
